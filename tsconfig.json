{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./public/*"],
      "panda/*": ["./panda/*"],
      "package": ["./package.json"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client",
      "unplugin-icons/types/react"
    ],
    "strict": true,
    "noEmit": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "panda/",
    "panda.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
